<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.StartPage">
    <StackLayout>
        <Image Margin="-20, 50, 0, 0" HeightRequest="225" WidthRequest="400" Source="startLogo.png" />
        <Button x:Name="registrationBttn" Margin="50, 75, 50, 0" HeightRequest="60" WidthRequest="400" BackgroundColor="#4F89AA" 
                HorizontalOptions="Center"
                TextColor="#FFFFFF" Text = "Реєстрація" FontSize="Large" 
                CornerRadius="50"/>
        <Button x:Name="enteringBttn" Margin="50, 20, 50, 0" HeightRequest="60" WidthRequest="400" BackgroundColor="#4F89AA" 
                HorizontalOptions="Center"
                Text = "Вхід" TextColor="#FFFFFF" FontSize="Large" 
                CornerRadius="50"/>
        <Label Margin="335, 100, 0, 0" x:Name="version" Text="v.1.0.0" TextColor="Black"/>
    </StackLayout>
</ContentPage>